{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "HBase Configuration",
      "properties": [
        {
          "widget-type" : "textbox",
          "label" : "Reference Name",
          "name" : "referenceName",
          "description" : "Reference specifies the name to be used to track this external source"
        },
        {
          "widget-type": "textbox",
          "label": "Table Name",
          "name": "name",
          "description": "Name of the HBase table",
          "widget-attributes" : {
            "default" : "mytable"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Zookeeper Quorum",
          "name": "qorum",
          "description": "Comma separated list of hostname[[:port]:path] of HBase",
          "widget-attributes" : {
            "default" : "localhost:2181"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Row key (input field name or expression)",
          "name": "rowkey",
          "widget-attributes" : {
            "default" : "field name or expression"
          }
        }
      ]
    },
    {
      "label": "HBase Advanced Options",
      "properties" : [
        {
          "widget-type": "select",
          "label": "Row Level Durability",
          "name": "durability",
          "widget-attributes" : {
            "values" : [
              "WAL Asynchronous",
              "WAL Asynchronous & Force Disk Write",
              "Skip WAL",
              "WAL Synchronous"
            ],
            "default": "WAL Synchronous"
          }
        }
      ]
    }
  ],
  "jump-config": {
    "datasets": [{
      "ref-property-name": "name"
    }]
  }
}